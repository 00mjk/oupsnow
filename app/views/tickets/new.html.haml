#block-forms.block
  .content

    - if @preview
      .preview
        = textilized @ticket.description

    %h2 Create a new ticket

    .inner
      .flash
        = message[:error]
        = error_messages_for @ticket

      = form_for(@ticket, :action => url(:project_tickets), :id => 'ticket_form' , :class => 'form') do
        = partial :form
        %div{:class => 'group navform'}
          = submit "Create", :class => 'button'
          = submit "Preview", :class => 'button'
          or
          = link_to 'Cancel', resource(@project, :tickets)
