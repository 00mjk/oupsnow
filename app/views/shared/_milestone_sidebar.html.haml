- if milestone
  - sidebar_title ||=  "Current milestone"
  .block
    %h3= sidebar_title
    .content
      %p
        = link_to milestone.name, project_milestone_url(project, milestone)
        = " - "
        = "#{milestone.percent_complete.to_i} % complete"

      %div.pbar-container
        %div.pbar{:style => "width: #{milestone.percent_complete.to_i}%;"}

      %p
        Completed
        = milestone.ticket_closed_count
        of
        = milestone.tickets.count
        tickets
