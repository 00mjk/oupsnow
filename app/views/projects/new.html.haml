#block-forms.block
  .content
    %h1 Create project

    .inner
      .flash
        = flash[:error]
        = error_messages_for :project

      - form_for(@project, :class => 'form') do

        = render :partial => 'form'

        %div{:class => 'group navform'}
          = submit_tag "Create", :class => 'button'
          or
          = link_to 'Cancel', projects_url
