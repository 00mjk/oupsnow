#block-forms.block
  .content
    %h1 Create project

    .inner
      .flash
        = message[:error]
        = error_messages_for @project

      = form_for(@project, :action => url(:projects), :class => 'form') do

        = partial :form

        %div{:class => 'group navform'}
          = submit "Create", :class => 'button'
