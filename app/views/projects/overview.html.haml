#block-lists.block
  .content
    %h2
    .inner
      %ul.list
        - @events.each do |event|
          %li
            .left
              %span= time_overview(event.created_at)
            .item
              =link_to event.short_description, resource(@project, event.ticket)
              was
              =event.event_type
              by
              =event.user.login

      .actions-bar
        = will_paginate @events
