<div id="box">
  <div id="block-login" class="block">
    <h2>Login</h2>

    <div class="content login">

      <div class="flash">
        <%= flash[:failure] %>
      </div>
      <% form_for resource_name, :url => session_path(resource_name), :html => { :class => 'form login' } do |f| -%>

        <div class="group">
          <div class="left">
            <label class="label right"><%= f.label :email %>:</label>
          </div>
          <div class="right">
            <%= f.text_field :email, :class => "text_field" %>
          </div>
          <div class="clear"></div>
        </div>
        <div class="group">
          <div class="left">
            <label class="label right"><%= f.label :password %>:</label>
          </div>
          <div class="right">
            <%= f.password_field :password, :class => "text_field" %>
          </div>
          <% if devise_mapping.rememberable? -%>
            <div class="right">
              <%= f.check_box :remember_me %> <%= f.label :remember_me %>
            </div>
          <% end -%>
          <div class="clear"></div>
        </div>
        <div class="group navform">
          <div class="right">
            <%= submit_tag 'Submit', :class => 'button' %>
            |
            <%= link_to 'register', new_user_url %>
            <%- if devise_mapping.recoverable? %>
              | <%= link_to "Forgot password?", new_password_path(resource_name) %>
            <% end -%>

            <%- if devise_mapping.confirmable? %>
              | <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %>
            <% end -%>
          </div>
          <div class="clear"></div>
        </div>
      <% end %>
    </div>
  </div>
</div>
